<%= provide :page_title, "Admin" %>
<% currently_at "Users" %>

<h1 class="mb-4">Users</h1>

<div class='btn-group mb-3'>
  <%= link_to 'Download zipped xls', admin_users_path(format: :zip),
              class: 'btn btn-secondary' %>
</div>

<%= paginate @users %>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Email</th>
      <th>Created at</th>
      <th>Updated at</th>
    </tr>
  </thead>
  <tbody>
    <%= render @users %>
  </tbody>
</table>

<%= paginate @users %>
