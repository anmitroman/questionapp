<%= provide :main_menu do %>
  <header class='p-3 bg-dark text-white'>
    <div class='container'>
      <nav class='d-flex flex-wrap align-items-center justify-content-center'>
        <ul class='nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center md-md-0'>
          <li><%= nav_tab "Home", root_path, class: 'nav-link px-2',
                          current_page: current_page %></li>
          <li><%= nav_tab "Questions", quests_path, class: 'nav-link px-2',
                          current_page: current_page %></li>
          <li><%= nav_tab "Create question", new_quest_path, class: 'nav-link px-2',
                          current_page: current_page %></li>
        </ul>

        <ul class="nav col-12 col-lg-auto mb-2 md-md-0">
          <% if user_signed_in? %>
            <li class="dropdown"> <!--  add dropdown -->
              <%= nav_tab current_user.name_or_email, '#', 
                          class: 'nav-link px-2',
                          current_page: current_page %>
            </li>
            <li>
              <%= nav_tab 'Edit profile', edit_user_path(current_user), 
                          class: 'nav-link px-2',
                          current_page: current_page %>
            </li>
            <li>
              <%= link_to 'Log out', session_path, class: 'nav-link px-2',
                          data: { turbo_method: :delete } %>
            </li>
          <% else %>
            <li><%= nav_tab "Sign Up", new_user_path, class: 'nav-link px-2',
                          current_page: current_page %></li>
            <li><%= nav_tab "Log In", new_session_path, class: 'nav-link px-2',
                          current_page: current_page %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>
<% end %>
